<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#868383">
    <com.xulc.algorithmstudy.PageTabIndicator
        android:id="@+id/tabIndicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fafdfa"
        app:IndicatorTwoTabDistance="5dp"
        app:IndicatorLeftRightPadding="10dp"
        app:IndicatorDrawTabBackground="true"
        app:IndicatorAverageScreen="false"
        app:IndicatorTextColor="#0ce409"
        app:IndicatorLineColor="#0ce409"
        app:IndicatorTextSize="14sp"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>